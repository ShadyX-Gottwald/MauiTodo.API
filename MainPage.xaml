<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiTodo.Client1.MainPage">

    <!-- Tool Bar Styling-->
    <ContentPage.ToolbarItems >
        <ToolbarItem Text="Add Todo" Clicked="OnAddTodoClick" /> 
       
       
    </ContentPage.ToolbarItems>

    <!-- View Todos Collection View-->
    <CollectionView x:Name="collectionView" SelectionMode="Single"
                    SelectionChanged="OnSelectionChanged" Margin="30"
                    >
        <CollectionView.ItemsLayout>
            <LinearItemsLayout Orientation="Vertical" ItemSpacing="10"></LinearItemsLayout>
        </CollectionView.ItemsLayout>
        
        <!-- Individual Item -->
        <CollectionView.ItemTemplate>
            <DataTemplate >
                <Label Text="{Binding Title}" FontSize="Medium"></Label>
                
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
